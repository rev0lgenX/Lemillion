<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/uploadSpeedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/upload_speed"
        android:textColorHint="?android:textColorPrimary"
        app:hintTextAppearance="@style/SmallHeaderStyle"
        app:hintTextColor="?android:textColorPrimary">

        <EditText
            android:id="@+id/uploadSpeedEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:inputType="number"
            android:textColorHint="?android:textColorPrimary"
            android:textColor="?android:textColorPrimary" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/downloadSpeedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/download_speed"
        android:textColorHint="?android:textColorPrimary"
        app:hintTextAppearance="@style/SmallHeaderStyle"
        app:hintTextColor="?android:textColorPrimary">

        <EditText
            android:id="@+id/downloadSpeedEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:inputType="number"
            android:textColorHint="?android:textColorPrimary"
            android:textColor="?android:textColorPrimary" />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>